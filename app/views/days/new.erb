<h1>Welcome <%= @user.username %></h1>

<% if @day && @day.errors %>
  <% @day.errors.full_messages.each do |message| %>
<% end %>

<% end %>

<form method="POST" action="/days">
  Month: <input type="integer" name="days[date]" /><br />
  Date: <input type="integer" name="days[month]" /><br />
  Year: <input type="integer" name="days[year]" /><br />
  <input type="submit" />
</form>

<% @user.days.each do |day| %>
<p> Day Off: <%=day.date%>/<%=day.month%>/<%=day.year%></p>
<%end %>

<p><a href="/users/edit">Edit</a></p>

<p><a href="/logout">Log Out</a></p>
