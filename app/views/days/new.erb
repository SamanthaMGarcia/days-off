<h1>Welcome <%= @user.username %></h1>

<form method="POST" action="/days">
  Month: <input type="integer" name="days[month]" /><br />
  Date: <input type="integer" name="days[date]" /><br />
  Year: <input type="integer" name="days[year]" /><br />
  <input type="submit" />
</form>

<% @user.days.each do |day| %>
<p> Day Off: <%=day.month%>/<%=day.date%>/<%=day.year%></p>
<%end %>

<p><h5><a href="/logout">Log Out</a></h5></p>
